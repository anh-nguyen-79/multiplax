<h1>✏ Modifier la réservation</h1>

<p><strong>Voiture :</strong> <%= @car.desc %></p>
<img src="<%= asset_path @car.img %>" alt="Photo de la voiture" width="300">

<%= form_with model: @rental, url: rental_path(@rental), method: :patch do |f| %>
  <div>
    <%= f.label :start_date, "Date de début" %>
    <%= f.date_field :start_date, required: true %>
  </div>

  <div>
    <%= f.label :end_date, "Date de fin" %>
    <%= f.date_field :end_date, required: true %>
  </div>

  <div>
    <%= f.submit "Enregistrer", class: "btn btn-success" %>
    <%= link_to "Annuler", rental_path(@rental), class: "btn btn-secondary" %>
  </div>
<% end %>
