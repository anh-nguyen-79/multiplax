
  <h1 class="text-center my-4"> Available Cars</h1>

  <% if notice %>
    <div class="alert alert-success text-center">
      <%= notice %>
    </div>
  <% end %>


  <div class="cars-container container">
    <% if @cars.any? %>
      <div class="row">
        <% @cars.each do |car| %>
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="card shadow-lg border-0">
              <% if car.images.attached? %>
                <%= cl_image_tag car.images.first.key, class: 'card-img-top', alt: car.desc %>
              <% else %>
                <div class="card-img-top d-flex align-items-center justify-content-center bg-secondary text-white" style="height: 200px;">
                  <span>No Image</span>
                </div>
              <% end %>

              <div class="card-body text-center">
                <h5 class="card-title fw-bold"><%= car.phase %></h5>

              <p class="card-text">
                <strong>Year:</strong> <%= car.year %><br>
                <strong>Km:</strong> <%= car.km %><br>
                <strong>Price:</strong> <%= number_to_currency(car.price, unit: "€") %><br>
                <strong>Location:</strong> <%= car.location %>
              </p>

              <!-- Boutons d'action -->
              <div class="card-actions">
                <%= link_to 'View Details', car_path(car), class: 'btn btn-info' %>

                <!-- Boutons d'édition et de suppression visibles uniquement pour le propriétaire -->
                <% if user_signed_in? && car.user == current_user %>
                  <%= link_to 'Edit', edit_car_path(car), class: 'btn btn-warning' %>
                  <%= button_to 'Delete', car_path(car), method: :delete,
                               data: { turbo_confirm: 'Are you sure you want to delete this car?' },
                               class: 'btn btn-danger mt-1' %>
                <% end %>
              </div>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      No cars available at the moment. Be the first to add one!
    </div>
  <% end %>
</div>

  <div class="d-flex justify-content-center mb-4">
    <%= link_to '➕ Add a New Car', new_car_path, class: 'btn btn-primary btn-lg px-4' %>
  </div>
  <style>
    .cars-container {
      margin-top: 30px;
    }

    .card {
      height: 100%;
      border-radius: 15px;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 24px rgba(0,0,0,0.15);
    }

    .card-img-top {
      height: 300px;
      object-fit: cover;
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
    }

    .card-body {
      min-height: 150px; /* Ajuste la hauteur du texte */
      padding: 15px;
    }

    .btn {
      font-size: 1rem;
      font-weight: bold;
      border-radius: 8px;
    }

    .btn-info {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-info:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
  </style>
