          <li class="list-group-item"><strong>ğŸ’° Prix par jour :</strong> <%= number_to_currency(@car.price, unit: "â‚¬") %></li>
          <li class="list-group-item"><strong>ğŸ“ Localisation :</strong> <%= @car.location %></li>
        </ul>
      </div>
      <div class="col-md-6">
        <h3 class="text-primary">ğŸ“ Description</h3>
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="text-muted"><%= @car.description.presence || "Aucune description fournie" %></p>
          </div>
